            <string>event_inherited();

if !global.frozen &amp;&amp; !dead &amp;&amp; !global.flashStopper
{
    switch (phase)
    {
        case 0: //face player at the start
            calibrateDirection();
            phase = 1;
            break;
        case 1: //set charge time
            //choose time to wait between shots, and don't repeat the same time more than twice in a row
            shotType = choose(0, 1);
            
            if (shotType == previousShotType &amp;&amp; chain &gt;= 2)
            {
                if (shotType == 0)
                {
                    shotType = 1;
                }
                else
                {
                    shotType = 0;
                }
                
                chain = 0;
            }
            
            if (shotType == 0)
            {
                shootWait = 50;
            }
            else if (shotType == 1)
            {
                shootWait = 120;
            }
            
            previousShotType = shotType;
            
            chain += 1;
            
            xspeed = 1 * image_xscale; //&lt;-- speed here
            yspeed = keptYSpeed;
            
            phase = 2;
            break;
        case 2: //wait to shoot
            //animation
            imgIndex += imgSpd ;
            if (imgIndex &gt;= 4){
                imgIndex = imgIndex mod 4;
            }
            
            if (instance_exists(target)){
                //wait to fire
                shootWait -= 1;
                if (shootWait &lt;= 0){
                    phase = 3;
                    shootWait = 0;
                    imgIndex = 4;
                    xspeed = 0;
                    yspeed = 0;
                    
                    instance_create(x, y + sprite_height / 2, objFireTellyShot);
                }
            }
            break;
        case 3: //shoot
            imgIndex += imgSpd * 2;
            if (imgIndex &gt;= 6){
                imgIndex = 0;
            }
            if (imgIndex &gt;= 1 &amp;&amp; imgIndex &lt; 4){
                phase = 1;
            }
            break;
    }
    
    x += xspeed;
    y += yspeed;
}
else if dead
{
    phase = 0;
    shootTimer = 0;
    xspeed = 0;
    yspeed = 0;
    keptYSpeed = 0;
    imgIndex = 0;
}

image_index = imgIndex div 1;
</string>
